page {
  background-color: #FECD51
}

.searcher {
  display: flex;
}
button {
  background: #FFFFFF;
  font-size:10px;
  margin-left:0;
}

.item-container {
  display:flex;
  height:240rpx;
  width: 720rpx;
  border-bottom: 1px solid #DBDBDB
}

.item_pic {
  width:240rpx;
  height:240rpx;
  /* margin:20rpx; */
}

.item_pic image {
  width:240rpx;
  height:240rpx;
}

.item_text {
  display:flex;
  flex-direction:column;
  margin:20rpx;
}

.item_content{
  width: 90%;
  height: 100rpx;
  font-size: 11pt;
  color: #888;
  word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
}

.item_location{
  /* width: 550rpx; */
  font-size: 10pt;
  color: #999;
}

.item_distance{
  /* width: 100%; */
  font-size: 10pt;
  color: #999;
  position: fixed;
  right:50rpx;
  /* word-break: break-all;
  text-overflow: ellipsis;
  overflow: hidden;
  margin-left: 40rpx; */
}

.hover-class{
  background-color: #A4D3EE;
}

/* start of drawer menu from bottom */
.add-icon{
  height: 100rpx;
  width: 100rpx;
  position: fixed;
  bottom: 25rpx;
  left: 25rpx;
}
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.2;
  overflow: hidden;
}
/*content*/
.drawer_attr_box {
  width: 100%;
  overflow: hidden;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  background: #fff;
  border-radius: 24px 24px 0 0;
}
.drawer_content {
  padding: 20rpx 40rpx;
  height: 360rpx;
  overflow-y: scroll;
}
.drawer_select{
  padding:20rpx;
  font:42rpx "microsoft yahei";
  text-align: center;
}
.title {
  color: #FECD51;
  font-weight:700;
  font-size:32rpx;
}
.line{
  border-bottom: 1px solid #f8f8f8;
}
/* end of drawer menu from bottom */